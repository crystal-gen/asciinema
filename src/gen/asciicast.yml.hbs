version: {{#if version}} {{{version}}} {{else}} {{{@version}}} {{/if}}
width: {{#if width}} {{{width}}} {{else}} 80 {{/if}}
height: {{#if height}} {{{height}}} {{else}} 24 {{/if}}
{{#if duration}}
duration: {{{duration}}}
{{/if}}
{{#if command}}
command: {{{command}}}
{{/if}}
{{#if title}}
title: {{{title}}}
{{/if}}
{{#if env}}
env:
  {{#if env.term}}
  TERM: {{{env.term}}}
  {{/if}}
  {{#if env.shell}}
  SHELL: {{{env.shell}}}
  {{/if}}
{{/if}}
{{#if stdout}}
stdout:
  {{#each stdout}}
  -
    - {{#if delay}} {{{delay}}} {{else}} 1 {{/if}}
    - {{{data}}}
  {{/each}}
{{/if}}